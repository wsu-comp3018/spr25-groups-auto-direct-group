{
  "version": 2,
  "builds": [
    {
      "src": "auto-direct-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "auto-direct-api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/user/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/vehicle/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/manufacturer/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/manage-dealerships/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/test-drive/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/purchases/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/order-processing/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/finance/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/finance-requests/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/vehicle-comparison/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/complaints/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/chatbot/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/vehicle-images/(.*)",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/health",
      "destination": "/auto-direct-api/index.js"
    },
    {
      "source": "/(?!.*\\.).*",
      "destination": "/auto-direct-app/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

